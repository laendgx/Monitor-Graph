@charset "utf-8";
editwindow preview {
	position: relative;
	display: block;
	width: 100%;
	height: 150px;
	background-color: #545454;
	margin: 30px 0;
}
editwindow preview cms {
	position: absolute;
	display: block;
	background-color: #101010;
	margin: auto;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	color: #fff;
	text-align: center;
}

editwindow preview cmswrap {
    width: 192px;
    height: 96px;
    position: absolute;
    display: block;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    overflow: hidden;
}

editwindow tips {
	position: relative;
	display: block;
	font-size: 14px;
	font-weight: 600;
}

editwindow textarea {
	width: 100%;
	height: 90px;
	resize: none;
}

editwindow {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 500px;
    background-color: #efe;
    padding: 0 9px;
    z-index: 2;
}

editwindow > p{
	display: inline;
}

editwindow.browsewindow {
	top: inherit;
	z-index: 1;
}