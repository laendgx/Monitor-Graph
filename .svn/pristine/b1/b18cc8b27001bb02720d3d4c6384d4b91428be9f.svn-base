@charset "utf-8";
editwindow preview,
browsewindow bropreview {
	position: relative;
	display: block;
	width: 100%;
	height: 150px;
	background-color: #545454;
	margin: 30px 0;
}
editwindow preview cms,
browsewindow bropreview brocms {
	position: absolute;
	display: block;
	background-color: #101010;
	margin: auto;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	color: #fff;
	text-align: center;
}

editwindow preview cmswrap,
browsewindow bropreview brocmswrap {
    width: 192px;
    height: 96px;
    position: absolute;
    display: block;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    margin: auto;
    overflow: hidden;
}

editwindow tips {
	position: relative;
	display: block;
	font-size: 14px;
	font-weight: 600;
}

editwindow textarea {
	width: 100%;
	height: 90px;
	resize: none;
}

editwindow,
browsewindow {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    width: 500px;
    background-color: #efe;
    padding: 0 9px;
    z-index: 2;
}

editwindow > p {
	display: inline;
}

browsewindow {
	top: inherit;
	z-index: 1;
}

browsewindow pwrap {
	position: absolute;
	display: block;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
}

browsewindow pwrap p {
	position: absolute;
}

status {
	position: fixed;
	display: block;
	top: 0;
	right: 0;
	width: 288px;
	border: 1px solid #aaa;
}

status p {
	position: relative;
	width: 96%;
	margin: 0 auto;
	height: 20px;
	border-bottom: 1px solid #aaa;
	line-height: 20px;
	text-indent: 4px;
	font-size: 15px;
}